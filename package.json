{
  "name": "api-solid",
  "scripts": {
    "dev": "node -r @swc-node/register --watch src/server.ts",
    "start": "node build/server.js",
    "lint": "eslint . --cache --cache-location ./.temp/.eslintcache --max-warnings 0 --fix",
    "format": "prettier . -w",
    "build": "concurrently \"pnpm lint\" \"pnpm type-check\" \"pnpm build:tsup\"",
    "build:tsup": "tsup-node",
    "clean": "rimraf build coverage",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:coverage": "vitest run --coverage --changed",
    "type-check": "tsc",
    "db:studio": "prisma studio",
    "db:migrate-dev": "prisma migrate dev",
    "db:migrate-prod": "prisma migrate deploy",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.7",
    "@tsconfig/node22": "^22.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
